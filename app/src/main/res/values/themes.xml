<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme -->
    <style name="Theme.MinLauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="primaryColor">@color/primary_light</item>
        <item name="primaryColorTransparent">@color/primary_light_transparent</item>
        <item name="backgroundColor">@color/background_light</item>
        <item name="drawerBackground">@color/drawer_background_light</item>
        <item name="cardBackground">@color/card_background_light</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.MinLauncher.Light" parent="Theme.MinLauncher">
        <item name="primaryColor">@color/primary_light</item>
        <item name="primaryColorTransparent">@color/primary_light_transparent</item>
        <item name="backgroundColor">@color/background_light</item>
        <item name="drawerBackground">@color/drawer_background_light</item>
        <item name="cardBackground">@color/card_background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.MinLauncher.Dark" parent="Theme.MinLauncher">
        <item name="primaryColor">@color/primary_dark</item>
        <item name="primaryColorTransparent">@color/primary_dark_transparent</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="drawerBackground">@color/drawer_background_dark</item>
        <item name="cardBackground">@color/card_background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

</resources>
